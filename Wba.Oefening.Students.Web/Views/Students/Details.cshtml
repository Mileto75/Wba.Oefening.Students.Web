@model StudentsDetailsViewModel
<div class="row">
    <div class="col col-lg-4 mx-auto">
        <div class="card" style="width: 18rem;">
            <!--tips: add .text-center,.text-right to the .card to change card text alignment-->
            <img src="https://placehold.co/600x400" class="card-img-top" alt="@Model.Text">
            <div class="card-body">
                <h5 class="card-title">@Model.Text</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Model.Course</h6>
                <a href="/students/ShowAll" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>
